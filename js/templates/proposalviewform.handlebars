<div class="row">
   <div class="col-sm-6">  
		<form class="form-horizontal" id="formupdateproposal">
		  <fieldset>
		    <div class="form-group">
		      <label  class="col-lg-9 control-label">Final Year Project Title</label>
		      <div class="col-lg-9">
		        <input type="text" class="form-control" id="title" value="{{ title }}" required>
		      </div>
		    </div>
		    <div class="form-group">
		      <label  class="col-lg-3 control-label">Type</label>
		      <div class="col-lg-9">
		         <select class="form-control" id="type">
                       {{#ifEquals type "Development" }}
                        <option value="Development"  selected="selected">Development</option>
                        <option value="Research">Research</option>
                        <option value="Others">Others</option>
                       {{/ifEquals}}
                       {{#ifEquals type "Research" }}
                        <option value="Development"  >Development</option>
                        <option value="Research" selected="selected">Research</option>
                        <option value="Others">Others</option>
                       {{/ifEquals}}
                       {{#ifEquals type "Others" }}
                        <option value="Development"  >Development</option>
                        <option value="Research">Research</option>
                        <option value="Others" selected="selected">Others</option>
                       {{/ifEquals}}
                </select>
		      </div>
		    </div>
		    <div class="form-group">
		      <label  class="col-lg-3 control-label">Status</label>
		      <div class="col-lg-9">
                    <select class="form-control" id="status">
                    {{#ifEquals status "Pending" }}
                        <option value="Pending"  selected="selected">Pending</option>
                        <option value="Approved">Approved</option>
                        <option value="Rejected">Rejected</option>
                    {{/ifEquals}}
                    {{#ifEquals status "Approved" }}
                        <option value="Pending"  >Pending</option>
                        <option value="Approved" >Approved</option>
                        <option value="Rejected">Rejected</option>
                    {{/ifEquals}}
                    {{#ifEquals status "Rejected" }}
                        <option value="Pending"  >Pending</option>
                        <option value="Approved">Approved</option>
                        <option value="Rejected" selected="selected">Rejected</option>
                    {{/ifEquals}}
                    </select>
		      </div>
		    </div>
            <input type="hidden"  id="index" value="{{ id }}">
		        <input type="hidden"  id="studentid" value="{{ studentid }}">
		     
		    <div class="form-group">
		      <div class="col-lg-9 col-lg-offset-3">
		      	<a href="#proposal" class="btn btn-danger">Back</a>
		        <button type="submit" class="btn btn-primary">Submit</button>
		      </div>
		    </div>
		  </fieldset>
		</form>   
   </div>
</div>
